@using StudentEducationCenter.Data.Models;
@model List<AgeGroup>

<h2>Списък с възрастови групи</h2>

<table class="table">
    <thead>
        <tr>
            <th>Име на възрастова група</th>
            <th>Действие</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ageGroup in Model)
        {
            <tr>
                <td>@ageGroup.AgeGroupName</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@ageGroup.Id" method="post">
                        <button type="submit" class="btn btn-danger">Изтрий</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center">
    <a asp-action="Add" class="btn btn-primary">Добави нова възрастова група</a>
</div>