@using StudentEducationCenter.Data.Models;
@model List<City>

<h2>Списък с градове</h2>

<table class="table">
    <thead>
        <tr>
            <th>Име на града</th>
            <th>Действие</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var city in Model)
        {
            <tr>
                <td>@city.CityName</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@city.Id" method="post">
                        <button type="submit" class="btn btn-danger">Изтрий</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center">
    <a asp-action="Add" class="btn btn-primary">Добави нов град</a>
</div>