@using StudentEducationCenter.Data.Models;
@model List<Specialty>

<h2>Списък със специализации</h2>

<table class="table">
    <thead>
        <tr>
            <th>Име на специализация</th>
            <th>Действие</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var specialty in Model)
        {
            <tr>
                <td>@specialty.SpecialtyName</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@specialty.Id" method="post">
                        <button type="submit" class="btn btn-danger">Изтрий</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center">
    <a asp-action="Add" class="btn btn-primary">Добави нова специализация</a>
</div>