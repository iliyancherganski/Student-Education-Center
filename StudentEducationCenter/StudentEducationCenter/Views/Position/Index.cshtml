@using StudentEducationCenter.Data.Models;
@model List<Position>

<h2>Списък с длъжности</h2>

<table class="table">
    <thead>
        <tr>
            <th>Име на длъжността</th>
            <th>Действие</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var position in Model)
        {
            <tr>
                <td>@position.PositionName</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@position.Id" method="post">
                        <button type="submit" class="btn btn-danger">Изтрий</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center">
    <a asp-action="Add" class="btn btn-primary">Добави нова длъжност</a>
</div>